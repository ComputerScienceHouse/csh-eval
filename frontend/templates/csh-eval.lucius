html, body {
    padding: 0;
    margin: 0;
}

body {
    padding-top: 70px;
    padding-top: 76px;
    padding-bottom: 20px;
    background-color: #eee;
    background-image: url(@{StaticR background_png});
    background-attachment: fixed;
}

.logo {
  width: 48px;
  height: 46px;
}

.navbar-brand .logo {
  width: 24px;
  height: 23px;
  position: relative;
  top: -2px;
  display: inline;
}

/* Decreasing panel-heading padding for mobile devices */
.panel-heading {
  padding: 10px;
}

td {
    font-style: bold;
}

.project-content {
   font-size: 12pt;
   background: #fff;
   color: #000;
   height: 300px;
   padding: 15px 25px;
   margin: 10px 0px;
   -webkit-box-shadow: 0 1px 1px 1px rgba(0, 0, 0, 0.1); 
   -moz-box-shadow: 0 1px 1px 1px rgba(0, 0, 0, 0.1); 
   box-shadow: 0 1px 1px 1px rgba(0, 0, 0, 0.1); 
   transition: all .1s ease-in;
   -webkit-transition: all .1s ease-in;
}

.project-content:hover {
   -webkit-box-shadow: 0 0 5px 2px rgba(0, 0, 0, 0.1); 
   -moz-box-shadow: 0 0 5px 2px rgba(0, 0, 0, 0.1); 
   box-shadow: 0 0 5px 2px rgba(0, 0, 0, 0.1); 
}

.project-title {
    font-size: 24pt;
}

#no-projects {
    color: #888;
    text-align: center;
    margin: 100px 0px;
}

